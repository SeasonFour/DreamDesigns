<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/buttonStore"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="NEW IN"
        android:textStyle="bold"/>

    <RelativeLayout
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/women1"
            android:layout_marginTop="37dp"
            android:textAlignment="gravity All"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton2"
            android:src="@drawable/all1"
            android:layout_alignTop="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginStart="33dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton3"
            android:src="@drawable/kid1"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageButton4"
            android:src="@drawable/men1"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="ALL"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_alignEnd="@+id/imageButton2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="WOMEN"
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/imageButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="KIDS"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="MEN"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/textView4"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignEnd="@+id/imageButton4" />


    </RelativeLayout>

</LinearLayout>
