<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/buttonStore"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="NEW IN"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


    <ImageView
        android:layout_width="66dp"
        android:layout_height="82dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:src="@drawable/lady1"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:layout_alignParentStart="true"
        android:id="@+id/imageView5" />

    <ImageView
        android:layout_width="63dp"
        android:layout_height="69dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/lady2"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="101dp"
        android:maxWidth="42dp"
        android:maxHeight="42dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/kids1"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:id="@+id/imageView"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignStart="@+id/imageView4" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/kids2"
                android:layout_marginRight="16dp"
                android:contentDescription=""
                android:layout_alignParentStart="true"
                android:id="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView4" />


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/men1"
                android:layout_marginRight="16dp"
                android:contentDescription=""
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/imageView2"
            android:id="@+id/imageView4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/men2"
                android:layout_marginRight="16dp"
                android:contentDescription=""
                android:id="@+id/imageView2"
                android:layout_alignBottom="@+id/imageView3" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/kids3"
            android:layout_marginRight="16dp"
            android:contentDescription=""
            android:layout_alignParentStart="true"
            android:layout_marginStart="118dp"
            android:id="@+id/imageView"
            android:layout_above="@+id/imageView3" />



        </RelativeLayout>



</LinearLayout>
