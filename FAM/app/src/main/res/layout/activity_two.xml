<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:id="@+id/buttonStore"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:text="NEW IN"
        android:textStyle="bold"/>



    <ImageButton
        android:id="@+id/thumb_button_1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginRight="1dp"
        android:scaleType="centerCrop"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_card">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:src="@drawable/lady1"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/lady2"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxWidth="150dp"
        android:maxHeight="150dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/lady3"
        android:layout_marginRight="16dp"
        android:contentDescription=""
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView7" />



           <ImageView
                android:layout_width="100"
                android:layout_height="100"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/kids1"
                android:layout_marginRight="16dp"
                android:contentDescription=""
               android:id="@+id/imageView3"
               android:layout_centerVertical="true"
               android:layout_alignStart="@+id/imageView4" />


        <ImageView
                android:layout_width="100"
                android:layout_height="100"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/kids2"
                android:layout_marginRight="16dp"
                android:contentDescription=""
            android:id="@+id/imageView4"
            android:layout_marginBottom="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="100"
                android:layout_height="100"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/kids3"
                android:layout_marginRight="16dp"
                android:contentDescription=""
                android:id="@+id/imageView2"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView9" />


        <ImageView
            android:layout_width="100"
            android:layout_height="100"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/men1"
            android:layout_marginRight="16dp"
            android:contentDescription=""
            android:id="@+id/imageView8"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignStart="@+id/imageView9" />


        <ImageView
            android:layout_width="100"
            android:layout_height="100"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/men2"
            android:layout_marginRight="16dp"
            android:contentDescription=""
            android:id="@+id/imageView9"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView" />


        <ImageView
            android:layout_width="100"
            android:layout_height="100"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/men3"
            android:layout_marginRight="16dp"
            android:contentDescription=""
            android:id="@+id/imageView"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />



        </RelativeLayout>



</FrameLayout>
